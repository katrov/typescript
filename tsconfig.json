{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "module": "esnext",
    "allowJs": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
